<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/usernameInputSend"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/stickerScroll"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:imeOptions="actionSend"
        android:inputType="text"
        android:hint="Enter Recipient Username"
        />

    <HorizontalScrollView
        android:id="@+id/stickerScroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/usernameInputSend"
        android:layout_gravity="center"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/mustache"
                android:onClick="clickMustache"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/dead"
                android:onClick="clickDead"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:onClick="clickDrooling"
                android:scaleType="centerCrop"
                android:src="@drawable/drooling" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:onClick="clickFamous"
                android:scaleType="centerCrop"
                android:src="@drawable/famous" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:onClick="clickMonocle"
                android:scaleType="centerCrop"
                android:src="@drawable/monocle" />

            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/party"
                android:onClick="clickParty"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/plus_one"
                android:onClick="clickPlusOne"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
            <ImageButton
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/silly"
                android:onClick="clickSilly"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>
        </LinearLayout>


    </HorizontalScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>